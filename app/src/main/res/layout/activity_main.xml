<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp">

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="118dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/neuq" />
    <EditText
        android:id="@+id/ed1"
        android:layout_marginLeft="40dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/iv1"
        android:hint="   用户名"
        android:background="@drawable/virtualbg"
        android:textColorHint="@color/colororange"
        android:drawableLeft="@drawable/plane"
        android:textColor="#000"
        android:maxLines="1"/>
    <EditText
        android:id="@+id/ed2"
        android:layout_marginLeft="40dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ed1"
        android:hint="   密码"
        android:layout_marginTop="10dp"
        android:background="@drawable/virtualbg"
        android:textColorHint="@color/colororange"
        android:drawableLeft="@drawable/plane"
        android:inputType="textPassword"
        android:textColor="#000"
        android:maxLines="1"/>
    <Button
        android:id="@+id/button1"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ed2"
        android:background="@drawable/realbg"
        android:text="登录"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/button2"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/button1"
        android:background="@drawable/virtualbg_black"
        android:text="注册"
        android:textSize="25dp"/>

</RelativeLayout>