<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/ivzhuce1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/neuq" />
    <EditText
        android:id="@+id/edzhuce1"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ivzhuce1"
        android:layout_marginLeft="40dp"
        android:background="@drawable/virtualbg"
        android:hint="  请输入用户名"
        android:textColorHint="@color/colororange"
        android:drawableLeft="@drawable/plane"
        android:maxLines="1"/>
    <EditText
        android:id="@+id/edzhuce2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/edzhuce1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/virtualbg_black"
        android:hint="  请输入密码"
        android:textColorHint="@color/colorred"
        android:drawableLeft="@drawable/plane"
        android:maxLines="1"
        android:inputType="textPassword"/>
    <EditText
        android:id="@+id/edzhuce3"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/edzhuce2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/virtualbg_black"
        android:hint="  请再次密码"
        android:textColorHint="@color/colorred"
        android:drawableLeft="@drawable/plane"
        android:maxLines="1"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/buttonzhuce1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/edzhuce3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="43dp"
        android:text="取消"
        android:textSize="30dp"
        android:background="@drawable/realbg"/>

    <Button
        android:id="@+id/buttonzhuce2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/buttonzhuce1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="220dp"
        android:layout_marginTop="-51dp"
        android:background="@drawable/realbg1"
        android:text="确认"
        android:textSize="30dp" />
</RelativeLayout>